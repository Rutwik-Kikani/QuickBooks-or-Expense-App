<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.boom.quickbooks">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_my_forground"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_my_forground"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.SummaryActivity">
        </activity>
        <activity android:name=".Activities.EditExpenseActivity" />
        <activity android:name=".Activities.DbTesterActivity" >
        </activity>
        <activity android:name=".Activities.DetailsActivity" />
        <activity
            android:name=".Activities.ExpenseListActivity"
            android:label="@string/title_activity_expense_list"
            android:theme="@style/AppTheme.NoActionBar" >

        </activity>

        <activity android:name=".Activities.AddExpenseActivity">
        </activity>
        <activity
            android:name=".Activities.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
    </application>

</manifest>