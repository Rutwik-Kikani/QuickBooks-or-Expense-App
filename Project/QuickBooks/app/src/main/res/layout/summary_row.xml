<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">
        <RelativeLayout
            android:id="@+id/sCardRelativeLayoutId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorSummaryCardShade2"
            android:padding="15dp">
            <TextView
                android:id="@+id/sCategoryNameId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:text="Category Name"
                android:gravity="center"
                android:textColor="@color/colorSummaryCategoryShade2"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/sPercentageId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_alignBottom="@id/sCategoryNameId"
                android:layout_alignTop="@id/sCategoryNameId"
                android:gravity="center"
                android:text="CategoryPercentage"
                android:textColor="@color/colorSummaryPercentageShade2"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>